<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">
  <!--用来注册servlet接口的实现类-->
  <!--  注册页面-->
  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>services.RegServlet</servlet-class>

  </servlet>
  <!--  用来注册servlet的接口-->
  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/reg</url-pattern>
  </servlet-mapping>

  <!--  登录接口-->
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>services.LoginServlet</servlet-class>

  </servlet>
  <!--  用来注册servlet的接口-->
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!--  文章接口-->
  <servlet>
    <servlet-name>myartList</servlet-name>
    <servlet-class>services.MyArtListServlet</servlet-class>

  </servlet>
  <!--  用来注册servlet的接口-->
  <servlet-mapping>
    <servlet-name>myartList</servlet-name>
    <url-pattern>/myArtList</url-pattern>
  </servlet-mapping>

</web-app>